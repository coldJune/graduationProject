<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
    
<struts>
	 <!-- 告诉Struts由spring容器作为bean工厂 -->
    <constant name="struts.objectFactory" value="spring"></constant>
    <package name="sysUser" namespace="/sysUser" extends="struts-default">
    	<action name="findAll" class="dpmsSysUserAction" method="findAll">
    		<result>/jsp/root/sysUser/sysUser.jsp</result>
    	</action>
    	<action name="search" class="dpmsSysUserAction" method="searchByUserName">
    		<result>/jsp/root/sysUser/sysUser.jsp</result>
    	</action>
    	<action name="showDetail" class="dpmsSysUserAction" method="showDetail">
    		<result>/jsp/root/sysUser/sysUser_modify.jsp</result>
    	</action>
    	<action name="saveOrupdate" class="dpmsSysUserAction" method="saveOrupdate">
    		<result  type="redirectAction">
				<param name="actionName">findAll</param>
			</result>
    	</action>
    </package>
</struts>